				<div class="box">
				<div class="sb">
				<?php if( ! empty($q) )
					_e("You're looking for...");
				else
					_e("Type something to search")
				?>
				<form method="GET" action="<?php echo url() . 'search' ?>">
					<input type="text" name="q" id="s">
				</form>
				</div>
				<hr>
				<div id="search">
				<?php
				!empty($_GET['q']) and search($_GET['q'], $s, 1)
				?>
				</div>
				</div>
			</div>
			<?php load_template('sidebar') ?>
		</div>
	</div>

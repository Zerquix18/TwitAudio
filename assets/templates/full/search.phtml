	<script type="text/javascript">
	$("#q, #s").val("<?php echo addslashes($_GET['q']) ?>");
	var search = "<?php echo urlencode($_GET['q']) ?>";
	</script>
	<?php endif ?>
	<?php load_template('footer') ?>
</body>

{{!
	The modal for payments
}}
<div id="payments" class="modal modal-fixed-footer">
	<div class="modal-content">
		<h4>Premium</h4>
		<div class="row">
			<div class="col s12">
				<ul class="tabs premium-tabs">
					<li
						class="tab col s3"
						id="premium-overview-selector">
						{{! oh no :( }}
						<a
						{{#if user.is_premium}}
						class="blue-text active"
						{{else}}
						class="blue-text"
						{{/if}}
						href="#premium-overview">
							Overview
						</a>
					</li>
					<li
					{{#if user.is_premium}}
					class="tab col s3 disabled"
					{{else}}
					class="tab col s3"
					{{/if}}
					id="premium-selector-get">
						<a
						{{#if user.is_premium}}
						class="blue-text text-lighten-4"
						{{else}}
						class="blue-text"
						{{/if}}
						href="#premium-get">
							Get premium
						</a>
					</li>
					<li
					{{#if user.is_premium}}
					class="tab col s3"
					{{else}}
					class="tab col s3 disabled"
					{{/if}}
					id="premium-selector-enjoy">
						<a
						{{#if user.is_premium}}
						class="blue-text active"
						{{else}}
						class="blue-text text-lighten-4"
						{{/if}}
						href="#premium-enjoy">
							Enjoy!
						</a>
					</li>
				</ul>
			</div>
			<div id="premium-overview" class="col s12">
				<h4>Become premium!</h4>
				<!--
					Worst design for a premium overview
					But I promise to change it :(
				-->
				<p>
					Being premium brings you the following features:
				</p>
				<ul class="collection">
					<li class="collection-item">
						<i class="fa fa-plus"></i>&nbsp;
						5 minutes to upload your voice notes or audios
					</li>
					<li class="collection-item">
						<i class="fa fa-magic"></i>&nbsp;
						9 more effects
					</li>
					<li class="collection-item">
						<i class="fa fa-thumbs-up"></i>&nbsp;
						The quality in the audios is not decreased
					</li>
					<li class="collection-item">
						<i class="fa fa-ban"></i>
						No ads!
					</li>
				</ul>
				<p>The price is <strong>1,30</strong> US dollars.</p>
			</div><!-- #premium-overview -->
			<div id="premium-get" class="col s12">
				<h5>Credit Card</h5>
				<form id="premium-form">
					<div class="premium-inputs">
						<div class="row">
							<div class="input-field col s12">
							{{! this is terrible!! too many tabs }}
								<i class="material-icons prefix">
									credit_card
								</i>
								<input
								id="premium-input-card"
								data-stripe="number"
								type="text"
								class="validate">
								<label
								for="premium-input-card"
								data-success="Alright!">
									Card Number
								</label>
							</div><!-- .input-field -->
		 				</div> <!-- .row -->
						<div class="row">
							<div class="input-field col s6">
								<i class="material-icons prefix">
									view_agenda
								</i>
								<input
								id="premium-input-exp"
								data-stripe="exp"
								type="text"
								class="validate">
								<label
								for="premium-input-exp"
								data-success="Alright!">
									Exp. date (MM/YY)
								</label>
							</div><!-- .input-field -->
						<div class="input-field col s6">
							<i class="material-icons prefix">lock_outline</i>
							<input
							id="premium-input-cvc"
							data-stripe="cvc"
							type="text"
							class="validate">
							<label
							for="premium-input-cvc"
							data-success="Alright!"
							>
								CVC
							</label>
						</div><!-- input-field -->
		  			</div><!-- .row -->
				</div><!-- premium-form-inputs -->
				<button
				id="premium-submit"
				type="submit"
				class="btn waves-effect waves-light center">
					Make me premium!&nbsp;
					<i class="fa fa-send"></i>
				</button>
			</form>
		</div> <!-- #premium-get -->
		<div id="premium-enjoy" class="col s12">
			<h4 class="premium-text-enjoy">
				Congratulations, you are premium!
			</h4>
			You can enjoy all the features until
			<span
			id="premium-until"
			class="datetime"
			data-timestamp="{{user.premium_until}}">
			</span>!
			<button
			id="premium-button-record"
			class="premium-button-record btn waves-effect waves-light
			blue lighten-3"
			>
				<i class="fa fa-circle"></i>&nbsp;
				Start recording!
			</button>
		</div><!-- #premium-enjoy -->
	</div>
	{{! here idk about the indentation :( }}
	</div>
	<div class="modal-footer">
		<a href="javascript:void(0);" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
	</div>
</div>